colorscheme onedark
set background=dark
set colorcolumn=80
highlight ColorColumn ctermbg=236
set expandtab
set tabstop=4 softtabstop=4
set shiftwidth=4
set autoindent
set number relativenumber
set nowrap
set smartindent
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set scrolloff=8
set signcolumn=yes
set cmdheight=2

" TextEdit might fail if hidden is not set.
set hidden

" remap ecs to jk
inoremap jk <ESC>
inoremap JK <ESC>
